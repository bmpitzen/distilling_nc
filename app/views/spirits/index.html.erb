<%= render 'menubar' %>

<body class="mx-auto container">

<h1>Spirits</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Distillery</th>
      <th scope="col">Spirit type</th>
      <th scope="col">Proof</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @spirits.each do |spirit| %>
      <tr>
        <td scope="row"><%= link_to spirit.name, spirit %></td>
        <td><%= link_to Distillery.find(spirit.distillery_id).name, Distillery.find(spirit.distillery_id) %></td>
        <td><%= link_to SpiritType.find(spirit.spirit_type_id).category, SpiritType.find(spirit.spirit_type_id) %></td>
        <td><%= spirit.proof %></td>
        <td><%= link_to 'Edit', edit_spirit_path(spirit) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spirit', new_spirit_path %>


</body>